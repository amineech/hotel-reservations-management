<div class="form-rm-title">
    <h2>Reservation Infos</h2>
</div>

<div class="add-link">
    <a href="/admin/reservations">Go back</a>
</div>

<div class="form-room">
    <form>
        <label>Last Name</label>
        <input type="text" value="{{reservation.[0].nom}}" readonly>
        <label>First Name</label>
        <input type="text" value="{{reservation.[0].prenom}}" readonly>
        <label>Telephone</label>
        <input type="text" value="{{reservation.[0].telephone}}" readonly>
        <label>Email</label>
        <input type="text" value="{{reservation.[0].email}}" readonly>
        <label>Category</label>
        <input type="text" value="{{reservation.[0].label_category}}" readonly>
        <label>Room Number</label>
        <input type="text" value="{{room.[0].number_room}}" readonly>
        <label>Arrival</label>
        <input type="text" value="{{reservation.[0].date_checkin}}" readonly>
        <label>Depart</label>
        <input type="text" value="{{reservation.[0].date_checkout}}" readonly>
        <label>Reception Date</label>
        <input type="text" value="{{reservation.[0].created_at}}" readonly>
    </form>
</div>